{
  "name": "ecommerce-platform",
  "version": "1.0.0",
  "description": "A modern e-commerce platform with React frontend and Node.js backend",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-deps": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "ecommerce",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Om-Prakash-Upadhyay/E-Commerce-Platform.git"
  },
  "bugs": {
    "url": "https://github.com/Om-Prakash-Upadhyay/E-Commerce-Platform/issues"
  },
  "homepage": "https://github.com/Om-Prakash-Upadhyay/E-Commerce-Platform#readme",
  "dependencies": {
    "mongodb": "^6.17.0"
  }
}
